@model NetCare.Models.LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    Html.EnableClientValidation();
    Html.EnableUnobtrusiveJavaScript();
}

<div class="col-lg-5 left-side-login">
    <img src="~/images/login-logo.png" class="img-responsive">
</div>
<div class="col-lg-7 right-side-login">
    <h1>NETCARE</h1>

    @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        if (TempData["Alert"] != null)
        {
            <div class="alert alert-danger" style="float: none;" role="alert">
                <b>@TempData["Alert"]</b>
            </div>
        }
        <div class="div-form">
            <div class="form-group has-feedback">
                @Html.TextBoxFor(model => model.UserName, new { placeholder = "User Name", @class = "form-control" })
                <span class="glyphicon fa fa-fw fa-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                @Html.TextBoxFor(model => model.Password, new { placeholder = "Password", @class = "form-control", type = "password" })
                <span class="glyphicon fa fa-fw fa-key form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">SUBMIT</button>
                </div>
            </div>
        </div>
    }
</div>