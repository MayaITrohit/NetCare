<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Net Care</title>
    @Styles.Render("~/Content/Admincss")
    <link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/1.10.11/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
  
    <style>
        a.tooltip {
            outline: none;
        }

        .tooltip {
            opacity: 1 !important;
        }

        a.tooltip strong {
            line-height: 30px;
        }

        a.tooltip:hover {
            text-decoration: none;
        }

        a.tooltip span {
            display: none;
            line-height: 16px;
            margin-left: 28px;
            margin-top: -2px;
            padding: 10px;
            z-index: 10;
        }

        .ui-datepicker.ui-widget.ui-widget-content.ui-helper-clearfix.ui-corner-all {
            z-index: 9999 !important;
        }

        a.tooltip:hover span {
            display: inline;
            position: absolute;
            color: #111;
            border: 1px solid #DCA;
            background: #fffAF0;
        }

        .btn.btn-default.btn-file {
            text-align: left;
            width: 100%;
        }

        .callout {
            z-index: 20;
            position: absolute;
            top: 30px;
            border: 0;
            left: -12px;
        }
      
        a.tooltip span {
            border-radius: 4px;
            box-shadow: 5px 5px 8px #CCC;
        }

        .form-group.col-lg-6 select {
            border: 1px solid #ccc;
            border-radius: 3px 0 0 3px;
            height: 34px;
            padding-left: 5px;
            width: 100%;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini" >
    <div class="wrapper">
        <header class="main-header">
            <a href="http://localhost:49783" class="logo"></a>
            @{
                Html.RenderPartial("_Notification");
            }
        </header>
        <aside class="main-sidebar">
            @{
                Html.RenderPartial("_HeaderNavBar");
            }
        </aside>
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <footer class="main-footer">
            <div class="pull-right hidden-xs"><b>Software version</b> 4.7.02556</div>
            <strong>Copyright &copy; 2018-2019 <a href="http://localhost:49783">NetCare</a>.</strong> All rights reserved.
        </footer>
        <div class="control-sidebar-bg"></div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/admin")
    <script type="text/javascript">
        $(document).ready(function () {
            $('input[type=datetime]').datepicker({
                dateFormat: "mm-dd-yyyy",
                autoclose: true,
            });

        });
    </script>
  
    @RenderSection("scripts", required: false)
</body>
</html>
