@model NetCare.Models.superuser
@{
    ViewBag.Title = "Super User Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group.col-lg-12 select {
        border: 1px solid #ccc;
        border-radius: 3px 0 0 3px;
        height: 34px;
        padding-left: 5px;
        width: 100%;
    }
</style>
@using (Html.BeginForm("SuperUserUpdate", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    <section class="content">
        <div class="row">
            <div class="col-xs-12 ">
                <div class="box">
                    <div class="box-header view-list">
                        <div class="info-page">
                            <h3 class="box-title">Super User Information</h3>
                        </div>
                    </div>
                    <div class="box-body all-input-btn">
                        <div class="form-group col-lg-6">
                            <label>User Name</label>
                            @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Password</label>
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Surname</label>
                            @Html.EditorFor(model => model.surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.surname, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Forenames</label>
                            @Html.EditorFor(model => model.forenames, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.forenames, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-6">
                            <label>Ultimate User</label>
                            @Html.EditorFor(model => model.UltimateUser, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.UltimateUser, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-lg-12">
                            <div class="box-footer">
                                <button class="btn btn-block btn-warning view-all-1" type="button">SAVE</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}